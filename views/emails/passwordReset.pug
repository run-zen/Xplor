extends baseEmail

block content
    p Hi #{firstName},
        p Someone requested a password reset for your account 
            a(href="/") #{user.email}            
            | !{' '} on           
            a(href='http://localhost:8000/') xplor.io
        p If you did not request a password reset, please ignore this email.
        p Click the following link to reset your password:
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`, target='_blank') Reset Password
        p This link is valid for the next 30 minutes