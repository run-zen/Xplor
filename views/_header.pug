header.header
  nav.nav.nav--tours
    a.nav__el(href='/')
      img.main-title(src='/img/logo-red.png' alt='main logo')

  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Logout      
      a.nav__el(href='/me')
        .nav__user-img 
          img(src=`${user.photo}` alt=`user` id='user-photo')
        span= user.name.split(' ')[0]
    else
      a.login.nav__el.login(href="/login") Log in
      a.login.nav__el.nav__el--cta(href="/signup") Sign up